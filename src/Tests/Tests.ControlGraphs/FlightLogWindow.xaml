<Window x:Class="Tests.ControlGraphs.FlightLogWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:ControlGraphs="clr-namespace:Tests.ControlGraphs" Title="FlightLogWindow" WindowState="Maximized" MinHeight="600" MinWidth="600">
    <StackPanel Orientation="Vertical" CanVerticallyScroll="True">
        <ControlGraphs:GraphComponent x:Name="PositionTopView" x:FieldModifier="public" VerticalAlignment="Stretch" Height="600"/>
        <ControlGraphs:GraphComponent x:Name="HeightView" x:FieldModifier="public" VerticalAlignment="Stretch" Height="200"/>
        <ControlGraphs:GraphComponent x:Name="AccelerometerView" x:FieldModifier="public" VerticalAlignment="Stretch" Height="100"/>
    </StackPanel>
</Window>
