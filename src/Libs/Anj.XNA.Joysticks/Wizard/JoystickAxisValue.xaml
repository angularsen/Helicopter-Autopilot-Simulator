<UserControl x:Class="Anj.XNA.Joysticks.Wizard.JoystickAxisValue"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Name="uc">
    <StackPanel x:Name="AxisValue">
        <Grid Width="50" Height="25" Margin="0" Background="#EEEEEE">
            <Rectangle x:Name="PositiveRect" Fill="Orange" Height="{Binding Path=PositiveHeight}" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" />
        </Grid>
        <Grid Width="50" Height="25" Background="#EEEEEE">
            <Rectangle x:Name="NegativeRect" Fill="Red" Height="{Binding Path=NegativeHeight}" VerticalAlignment="Top" HorizontalAlignment="Stretch" />
        </Grid>
        <Label Content="{Binding ElementName=uc, Path=AxisName}"/>
    </StackPanel>
</UserControl>
